#:import utils kivy.utils
<Mp4Recorder>:

    MDBoxLayout:
        orientation:'vertical'
        spacing: "20dp"
        
        MDLabel:
            id: time_label
            text: root.time_label_text
            color: root.time_label_color
            font_size: 24
            halign: "left"
            size_hint: 1, .3
            multiline: True

        MDRaisedButton:
            id: record_button
            text: root.record_button_text
            color: root.record_button_color
            font_size: 24
            halign: "center"
            size_hint: 0.75, 0.25
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            on_release: root.record()

        MDRaisedButton:
            id: email_button
            text: root.email_button_text
            color: root.email_button_color
            font_size: 24
            halign: "center"
            size_hint: 0.75, 0.25
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            #https://stackoverflow.com/questions/61728185/python-kivy-how-to-disable-enable-a-button
#           disabled: True if root.state != 'ready' or root.email_ok2send == False else False
            on_release: root.email()

        MDRaisedButton:
            id: emailfile_button
            text: root.emailfile_button_text
            color: root.emailfile_button_color
            font_size: 24
            halign: "center"
            size_hint: 0.75, 0.25
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            disabled: True if root.state != 'ready' else False
            on_release: root.emailfile()                

        MDRaisedButton:
            id: reset_button
            text: root.reset_button_text
            color: root.reset_button_color
            font_size: 24
            halign: "center"
            size_hint: 0.75, 0.25
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            on_release: root.reset()                

        MDRaisedButton:
            id: exit_button
            text: root.exit_button_text
            color: root.exit_button_color
            font_size: 24
            halign: "center"
            size_hint: 0.75, 0.25
            pos_hint: {'center_x':0.5, 'center_y':0.5}
            on_release: root.exit()

        MDScrollView:
            orientation: "vertical"
            MDList:
                pos_hint: {"x":0, "top":1}
                id: container

<LoadDialog>:

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        
        # note -  see \\wsl.localhost\Ubuntu\home\dovczitter\Mp4Recorder\.venv\lib\python3.9\site-packages\kivy\data\style.kv
        # https://stackoverflow.com/questions/61349456/adjust-kivy-filechooser-font-size
        # https://stackoverflow.com/questions/34298747/kivy-filechooserlistview-modifying-the-display-of-the-file-list
        FileChooser:
            id: filechooser
            path: "."
            sort_func: root.default_sort_func
            FileChooserListLayout

        MDBoxLayout:
            height: 20

            MDRaisedButton:
                id: emailfile_button
                text: "EmailFile"
                size_hint: 0.5, 0.20
                font_size: 24
                on_release: root.emailfile(filechooser.path, filechooser.selection)
                
            MDRaisedButton:
                id: cancel_button
                text: "Cancel"
                font_size: 24
                size_hint: 0.5, 0.20
                on_release: root.cancel()
